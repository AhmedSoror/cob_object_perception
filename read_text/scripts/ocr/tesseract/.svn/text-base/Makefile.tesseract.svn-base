all: installed

INSTALL_DIR = $(shell rospack find tesseract)/tesseract

SVN_DIR = tesseract-svn
SVN_URL = http://tesseract-ocr.googlecode.com/svn/trunk
SVN_REVISION = -r 451
SVN_PATCH = tesseract.patch

include $(shell rospack find mk)/svn_checkout.mk

installed: $(SVN_DIR) patched
					cd $(SVN_DIR) && ./configure --prefix=`rospack find tesseract` --with-extra-includes=`rospack find leptonica`/include --with-extra-libraries=`rospack find leptonica`/lib
					cd $(SVN_DIR) && make install
					touch installed

clean:
				-cd $(SVN_DIR) && make clean
				rm -rf tesseract installed patched

wipe: clean
				rm -rf $(SVN_DIR)
